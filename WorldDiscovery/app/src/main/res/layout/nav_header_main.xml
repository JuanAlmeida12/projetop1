<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_drawer"
    android:gravity="center_vertical|left"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="36dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:id="@+id/image_user_nav"
        android:layout_height="70dp"
        android:transitionName="@string/user_image_search"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:id="@+id/user_nav_name"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="Android Studio"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/user_score_title"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"

            android:textStyle="normal"
            android:text="Score:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/user_nav_score"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"

            android:textStyle="normal"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/last_login_title"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"

            android:text="Last Login:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/user_nav_last_login"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:text="12/12/12 12:12"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/since_title"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"

            android:text="Since:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="wrap_content"
            android:id="@+id/user_nav_since"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:text="12/12/12 12:12"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>
</LinearLayout>
